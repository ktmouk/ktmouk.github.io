---
import ProfileHeader from "@/components/ProfileHeader.astro";
import PostSection from "@/components/PostSection.astro";
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import ProductSection from "@/components/ProductSection.astro";
import AboutMeSection from "@/components/AboutMeSection.astro";
---

<Layout title="@ktmouk">
  <div
    class="border-x-slate-200 pb-20 md:w-[42rem] md:border-x md:border-dashed md:px-20"
  >
    <ProfileHeader />
    <main class="mx-10 flex flex-col gap-16 md:mx-0">
      <AboutMeSection />
      <ProductSection />
      <PostSection />
    </main>
  </div>
  <Footer />
</Layout>
